<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/inputViewLinearLayoutDate"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/inputViewDateLabel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="1999/12/31"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputViewLinearLayoutArrival"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_margin="8dp" >

        <TextView
            android:id="@+id/inputViewArrivalLabel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="出社"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/inputViewArrivalButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="09:00"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputViewLinearLayoutLeaving"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_margin="8dp" >

        <TextView
            android:id="@+id/inputViewLeavingLabel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="退社"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/inputViewLeavingButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="18:00"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputViewLinearLayoutRestTime"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_margin="8dp" >

        <TextView
            android:id="@+id/inputViewRestLabel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="休憩時間"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/inputViewRestTimeButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="01:00"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputViewLinearLayoutRemarks"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_margin="8dp" >

        <TextView
            android:id="@+id/inputViewRemarksLabel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="備考"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/inputViewRemarksEditText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:inputType="text"
            android:hint="遅刻、早退、etc ..." />
    </LinearLayout>

    <Button
        android:id="@+id/inputViewGoButton"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:text="決定"
        android:textSize="24sp" />

</LinearLayout>